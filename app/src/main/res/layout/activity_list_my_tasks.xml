<?xml version="1.0" encoding="utf-8"?>
<!-- This is YOUR personal screen. This is different for everyone-->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorAccent"
	android:orientation="vertical"
	tools:context="com.rip.roomies.activities.tasks.ListMyTasks">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:padding="10dp"
		android:textSize="30sp"
		android:text="My Tasks"
		android:textColor="@color/colorAccent"
		android:background="@color/colorPrimary"/>

	<TextView
		android:id="@+id/no_tasks_msg"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/black"
		android:textSize="12pt"
		android:padding="20dp"
		android:visibility="gone"
		android:text="There are no tasks to display." />

	<com.rip.roomies.views.TaskContainer
		android:id="@+id/task_list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

</LinearLayout>
