<?xml version="1.0" encoding="utf-8"?><!-- This page is for all shared goods. Like this is a list of everything everyone can see. Kay? This is not yo personal screen son. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">z

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        tools:context="com.rip.roomies.activities.duties.ListAllGoods">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/logs_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:background="@android:color/transparent"
                android:text="Logs"
                android:textColor="@color/colorAccent"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Goods"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <Button
                android:id="@+id/good_addbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:text="@string/plus"
                android:background="@android:color/transparent"
                android:textColor="@color/colorAccent"
                android:textSize="40dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/no_goods_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="There are no goods to display."
            android:textColor="@color/black"
            android:textSize="12pt"
            android:visibility="gone" />

        <com.rip.roomies.views.GoodContainer
            android:id="@+id/good_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>